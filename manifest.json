{
    "manifest_version": 2,
    "name": "MJsonViewer",
    "version": "2.0",
    "author": "Mike",
    "description": "Yet, just another jsonviewer plugin for Firefox.",
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "32": "icons/icon32.png"
    },
    "options_ui": {
        "page": "options.html"
    },
    "permissions": [
        "storage",
        "contextMenus",
        "tabs",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],
    "content_scripts": [{
            "all_frames": true,
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "mjsonviewer.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
